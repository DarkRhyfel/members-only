<!DOCTYPE html>
<html>
  <head>
    <title>Members Only</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= stylesheet_link_tag  "https://fonts.googleapis.com/css?family=Roboto" %>
  </head>

  <body>
    <% if flash[:notice] %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if flash[:alert] %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <nav class="navbar-top">
      <div class="navbar-home">
        <%= link_to 'Secret Posts', root_path, class: 'navbar-brand' %>
      </div>
      <div class="navbar-items">
        <% if user_signed_in? %>
          <%= link_to 'New Post', new_post_path, class: 'navbar-item' %>
          <%= button_to 'Log Out', destroy_user_session_path, class: 'navbar-item' %>
        <% else %>
          <%= link_to 'Sign In', new_user_session_path, class: 'navbar-item' %>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'navbar-item' %>
        <% end %>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
