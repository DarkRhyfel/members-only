<div class="main-container">
  <div class="form-container">
    <h2>New Post</h2>
    <%= form_with model: @post do |f| %>
      <div class="field">
        <%= f.label :title, class: 'form-label' %>
        <%= f.text_field :title, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :body, class: 'form-label' %>
        <%= f.text_area :body %>
      </div>
      <div class="actions">
        <%= f.submit "Create Post", class: 'button' %>
      </div>
    <% end %>
  </div>
</div>